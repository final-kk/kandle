{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "paths": {
            "@kandle/core": [
                "packages/core/src/index.ts"
            ],
            // "kandle/*": ["packages/core/src/*"],
            "@kandle/types": [
                "packages/types/src/index.ts"
            ],
            "@kandle/types/*": [
                "packages/types/src/*"
            ],
            "@kandle/utils": [
                "packages/utils/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "files": [],
    "references": [
        {
            "path": "./packages/types"
        },
        {
            "path": "./packages/utils"
        },
        {
            "path": "./packages/core"
        }
    ]
}
